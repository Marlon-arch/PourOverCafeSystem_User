        }

    .gallery-grid, .menu-grid {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 20px;
    }

        .gallery-grid img, .menu-grid img {
            width: 100%;
            max-width: 180px;
            border-radius: 12px;
            transition: transform 0.3s ease;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.05);
        }

            .gallery-grid img:hover, .menu-grid img:hover {
                transform: scale(1.05);
            }

    .card {
        background: #fff;
        border-radius: 12px;
        padding: 30px;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }

        .card:hover {
            transform: translateY(-4px);
        }

    .modal-overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.6);
        justify-content: center;
        align-items: center;
        z-index: 9999;
    }

    .modal-box {
        background-color: white;
        padding: 30px;
        border-radius: 12px;
        max-width: 400px;
        width: 90%;
        text-align: center;
        box-shadow: 0 0 20px rgba(0,0,0,0.2);
        font-family: 'Inter', sans-serif;
    }

        .modal-box input {
            width: 100%;
            padding: 12px;
            border: 1px solid #ccc;
            border-radius: 6px;
            font-size: 16px;
            margin-bottom: 20px;
        }

    .modal-actions {
        display: flex;
        justify-content: space-between;
        gap: 10px;
    }

    .error-card {
        background-color: #fcebea;
        color: #c0392b;
        padding: 15px;
        border-radius: 8px;
        text-align: center;
        margin-top: 15px;
        display: none;
    }

    @@media (max-width: 768px) {
        .overlay {
            padding: 20px;
        }

        h1.display-4 {
            font-size: 2rem;
        }
    }

    @@keyframes fadeInScale {
        from {
            opacity: 0;
            transform: scale(0.95);
        }

        to {
            opacity: 1;
            transform: scale(1);
        }
    }

    @@keyframes fadeOutScale {
        from {
            opacity: 1;
            transform: scale(1);
        }

        to {
            opacity: 0;
            transform: scale(0.95);
        }
    }

    .modal-overlay.show {
        display: flex;
    }

    .modal-box {
        animation: fadeInScale 0.4s ease forwards;
    }

        .modal-box.hide {
            animation: fadeOutScale 0.3s ease forwards;
        }

</style>

