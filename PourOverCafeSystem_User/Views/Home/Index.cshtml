<!-- Guest Modal -->
<div id="guestModal" class="modal-overlay">
    <div class="modal-box">
        <h2>Select Number of Guests</h2>
        <input type="number" id="guestInput" min="1" max="6" placeholder="Enter 1 to 6" />
        <div class="modal-actions">
            <button class="btn-khaki" onclick="submitGuest()">Continue</button>
            <button class="btn-dark" onclick="closeModal()">Cancel</button>
        </div>
        <div id="errorCard" class="error-card">Please enter a valid number between 1 and 6.</div>
    </div>
</div>

<script>
    const modal = document.getElementById("guestModal");
    const modalBox = modal.querySelector(".modal-box");
    const errorCard = document.getElementById("errorCard");

    function openModal() {
        modal.classList.add("show");
        modalBox.classList.remove("hide");
    }

    function closeModal() {
        modalBox.classList.add("hide");
        setTimeout(() => {
            modal.classList.remove("show");
            errorCard.style.display = "none";
        }, 300); // match fadeOut duration
    }

    function submitGuest() {
        const guests = document.getElementById("guestInput").value;
        if (guests >= 1 && guests <= 6) {
            window.location.href = `/Reservation/SelectTable?numberOfGuests=${guests}`;
        } else {
            document.getElementById("errorCard").style.display = "block";
        }
    }
</script>